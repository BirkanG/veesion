{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "veesion",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "veesion"
        }
    },
    "workspaceFolder": "/home/veesion",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/veesion,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "postCreateCommand": "/bin/bash /home/veesion/build_projects.sh"
}
